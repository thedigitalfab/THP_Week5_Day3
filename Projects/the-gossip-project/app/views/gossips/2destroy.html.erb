<div class="container">
    <h2 class="text-center my-5">Write a new Gossip</h2>
    <div class="row justify-content-center">
        <div class="col-6">
            <%= form_tag gossip_path, method: "delete" do %>
                <div class="form-group">
                    <%= label_tag 'Title:' %>
                    <%= text_field_tag 'title', @gossip.title, {class: 'form-control'} %>
                </div>
                <div class="form-group">
                    <%= label_tag 'Content:' %>
                    <%= text_area_tag 'content', @gossip.content, {class: 'form-control'} %>
                </div>
                <div class="row justify-content-center">
                    <%= submit_tag "Delete", {class: 'btn btn-primary'} %>
                </div>
            <% end %>
        </div>
    </div>
</div>