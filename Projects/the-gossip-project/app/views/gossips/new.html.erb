<% if @gossip.errors.any? then %>
    <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
            <% @gossip.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="container">
    <h2 class="text-center my-5">Write a new Gossip</h2>
    <div class="row justify-content-center">
        <div class="col-6">
            <%= form_tag url_for(action: 'create'), method: "post" do %>
                <div class="form-group">
                    <%= label_tag 'Title:' %>
                    <%= text_field_tag 'title', @gossip.title, {class: 'form-control'} %>
                </div>
                <div class="form-group">
                    <%= label_tag 'Content:' %>
                    <%= text_area_tag 'content', @gossip.content, {class: 'form-control'} %>
                </div>
                <div class="form-group">
                    <%= label_tag 'Author:' %>
                    <%= select_tag "user", options_from_collection_for_select(User.all, :id, :last_name), {class: 'form-control', prompt: 'Choose a user'} %>
                </div>
                <div class="row justify-content-center">
                    <%= submit_tag "Save", {class: 'btn btn-primary'} %>
                </div>
            <% end %>
        </div>
    </div>
</div>